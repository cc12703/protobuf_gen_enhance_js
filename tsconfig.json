{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true, 
    "allowJs":true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "src/types",
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "root/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
